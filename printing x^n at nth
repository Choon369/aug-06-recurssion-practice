class HelloWorld {
    public static double power(int x, int n)
    {
        if(n ==0)
        {
            
            return 1;
        }
        if(x==0)
        {
            return 0;
        }
        double c= x * power(x,n-1);
        return c;
        
        
    }
    public static void main(String[] args) {
        int n = 7;
        int x =2;
        double a =power(x,n-1);
        System.out.print(a);

    }
}
